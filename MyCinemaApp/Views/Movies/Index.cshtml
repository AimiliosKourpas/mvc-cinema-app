@model IEnumerable<MyCinemaApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <!--
            <th >
            @Html.DisplayNameFor(model => model.ContentAdmin)
            </th>
            -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length) <span> hour/s</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Summary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Director)
                </td>
                <!--
                    <td>
                @if (item.ContentAdmin != null)
                {
                    @Html.DisplayFor(modelItem => item.ContentAdmin.Username)
                }
                else
                {
                    <text>No Content Admin</text>
                }
                    </td>
                        -->
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, name = item.Name }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id, name = item.Name }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, name = item.Name })
                </td>


            </tr>
        }
    </tbody>
</table>
