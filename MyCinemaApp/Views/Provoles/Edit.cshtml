@model MyCinemaApp.Models.Provole

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Provole</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Provoles" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group d-none">
                <label asp-for="MoviesId" class="control-label"></label>
                <select asp-for="MoviesId" class="form-control" asp-items="ViewBag.MovieList"></select>
            </div>

            <div class="form-group">
                <label asp-for="CinemasId" class="control-label">Cinema</label>
                <select asp-for="CinemasId" class="form-control" asp-items="ViewBag.CinemasList"></select>
            </div>
            <!--MovieDate-->
            <div class="form-group">
                <label asp-for="MovieDate" class="control-label"></label>
                <input asp-for="MovieDate" class="form-control" type="date" />
                <span asp-validation-for="MovieDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MoviesName" class="control-label">Movie</label>
                <select asp-for="MoviesName" class="form-control" asp-items="ViewBag.MovieNameList"></select>
            </div>

            <div class="form-group d-none">
                <label asp-for="ContentAdminId" class="control-label"></label>
                <select asp-for="ContentAdminId" class="form-control" asp-items="ViewBag.ContentAdminList"></select>
            </div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

