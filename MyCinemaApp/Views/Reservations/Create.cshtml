@model MyCinemaApp.Models.Reservation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="MoviesId" class="control-label"></label>
                <select asp-for="MoviesId" class="form-control" asp-items="ViewBag.MoviesId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MoviesName" class="control-label">Movie</label>
                <select asp-for="MoviesName" class="form-control" asp-items="ViewBag.MoviesName"></select>
            </div>
            <div class="form-group">
                <label asp-for="CinemasId" class="control-label">Cinema</label>
                <select asp-for="CinemasId" class="form-control" asp-items="ViewBag.CinemasId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomersId" class="control-label">Customer</label>
                <select asp-for="CustomersId" class="form-control" asp-items="ViewBag.CustomersId"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSeats" class="control-label"></label>
                <input asp-for="NumberOfSeats" class="form-control" />
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

